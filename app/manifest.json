{
    "manifest_version": 3,
    "name": "No More Shorts",
    "version": "1.0",
    "description": "Hides shorts automatically",
    "permissions": ["activeTab", "scripting"],
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["app.js"],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["hider.js"],
            "matches": ["*://*.youtube.com/*"]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png"
        },
        "default_title": "No More Shorts"
    }
}